{
    "name": "exercism/php-analyzer",
    "description": "An analyazer to assess student's submissions and provide mentor-style commentary for Exercism's PHP track.",
    "version": "0.1.0",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "league/flysystem": "^3.15",
        "league/flysystem-memory": "^3.15",
        "nette/neon": "^3.4",
        "phpstan/phpstan": "^1.10",
        "psr/log": "^3.0",
        "symfony/console": "^6.3",
        "symfony/process": "^6.3"
    },
    "require-dev": {
        "doctrine/coding-standard": "^12.0",
        "phpunit/phpunit": "^10.3",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "phpunit-tests"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    }
}
